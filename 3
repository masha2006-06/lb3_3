class CircularNode {
    int data;
    CircularNode next;

    CircularNode(int data) {
        this.data = data;
        this.next = null;
    }
}

class CircularLinkedList {
    private CircularNode tail;
    private int size;

    public CircularLinkedList() {
        tail = null;
        size = 0;
    }

    public void addFirst(int data) {
        CircularNode newNode = new CircularNode(data);
        if (tail == null) {
            tail = newNode;
            tail.next = tail;
        } else {
            newNode.next = tail.next;
            tail.next = newNode;
        }
        size++;
    }

    public void addLast(int data) {
        addFirst(data);
        tail = tail.next;
    }

    public void removeFirst() {
        if (tail == null) return;
        if (tail.next == tail) {
            tail = null;
        } else {
            tail.next = tail.next.next;
        }
        size--;
    }

    public void removeLast() {
        if (tail == null) return;
        if (tail.next == tail) {
            tail = null;
        } else {
            CircularNode current = tail.next;
            while (current.next != tail) {
                current = current.next;
            }
            current.next = tail.next;
            tail = current;
        }
        size--;
    }

    public void remove(int data) {
        if (tail == null) return;
        CircularNode current = tail.next;
        CircularNode prev = tail;
        do {
            if (current.data == data) {
                if (current == tail && current.next == tail) {
                    tail = null;
                } else {
                    prev.next = current.next;
                    if (current == tail) tail = prev;
                }
                size--;
                return;
            }
            prev = current;
            current = current.next;
        } while (current != tail.next);
    }

    public boolean contains(int data) {
        if (tail == null) return false;
        CircularNode current = tail.next;
        do {
            if (current.data == data) return true;
            current = current.next;
        } while (current != tail.next);
        return false;
    }

    public int size() {
        return size;
    }

    public boolean isEmpty() {
        return tail == null;
    }

    public void display() {
        if (tail == null) {
            System.out.println("Список пустой");
            return;
        }
        CircularNode current = tail.next;
        do {
            System.out.print(current.data + " ");
            current = current.next;
        } while (current != tail.next);
        System.out.println();
    }

    public void clear() {
        tail = null;
        size = 0;
    }

    public void rotate() {
        if (tail != null) {
            tail = tail.next;
        }
    }

    public boolean findCycle() {
        return tail != null;
    }

    public CircularNode find(int data) {
        if (tail == null) return null;
        CircularNode current = tail.next;
        do {
            if (current.data == data) return current;
            current = current.next;
        } while (current != tail.next);
        return null;
    }

    public CircularLinkedList[] splitIntoTwo() {
        CircularLinkedList[] result = new CircularLinkedList[2];
        result[0] = new CircularLinkedList();
        result[1] = new CircularLinkedList();

        if (tail == null || size == 1) return result;

        CircularNode slow = tail.next;
        CircularNode fast = tail.next;
        CircularNode prevSlow = tail;

        while (fast.next != tail.next && fast.next.next != tail.next) {
            prevSlow = slow;
            slow = slow.next;
            fast = fast.next.next;
        }

        CircularNode firstHead = tail.next;
        CircularNode firstTail = slow;
        CircularNode secondHead = slow.next;
        CircularNode secondTail = tail;

        firstTail.next = firstHead;
        result[0].tail = firstTail;
        result[0].size = size / 2;

        secondTail.next = secondHead;
        result[1].tail = secondTail;
        result[1].size = size - size / 2;

        return result;
    }

    public int getFirst() {
        if (tail == null) {
            throw new IllegalStateException("Список пустой");
        }
        return tail.next.data;
    }

    public int getLast() {
        if (tail == null) {
            throw new IllegalStateException("Список пустой");
        }
        return tail.data;
    }
}

public class Main {
    public static void main(String[] args) {
        System.out.println("Тестирование циклического списка");

        CircularLinkedList list = new CircularLinkedList();

        System.out.println("\nБазовые методы:");

        System.out.println("Добавление элементов в конец:");
        list.addLast(10);
        list.addLast(20);
        list.addLast(30);
        System.out.print("Список: ");
        list.display();

        System.out.println("Добавление элемента в начало:");
        list.addFirst(5);
        System.out.print("Список: ");
        list.display();

        System.out.println("Проверка методов:");
        System.out.println("Размер: " + list.size());
        System.out.println("Содержит 20: " + (list.contains(20) ? "да" : "нет"));
        System.out.println("Содержит 100: " + (list.contains(100) ? "да" : "нет"));
        System.out.println("Первый элемент: " + list.getFirst());
        System.out.println("Последний элемент: " + list.getLast());

        System.out.println("Удаление элементов:");
        list.remove(20);
        System.out.print("После удаления 20: ");
        list.display();

        list.removeFirst();
        System.out.print("После удаления первого: ");
        list.display();

        list.removeLast();
        System.out.print("После удаления последнего: ");
        list.display();

        System.out.println("\nСпециальные методы:");

        list.clear();
        list.addLast(1);
        list.addLast(2);
        list.addLast(3);
        list.addLast(4);
        list.addLast(5);
        list.addLast(6);

        System.out.print("Исходный список: ");
        list.display();

        System.out.println("Наличие цикла: " + (list.findCycle() ? "да" : "нет"));

        System.out.println("Циклический сдвиг:");
        System.out.print("До сдвига: ");
        list.display();
        list.rotate();
        System.out.print("После сдвига: ");
        list.display();

        System.out.println("Поиск элементов:");
        System.out.println("Элемент 4: " + (list.find(4) != null ? "найден" : "не найден"));
        System.out.println("Элемент 10: " + (list.find(10) != null ? "найден" : "не найден"));

        System.out.println("Разделение списка:");
        System.out.print("Исходный: ");
        list.display();
        CircularLinkedList[] splitLists = list.splitIntoTwo();
        System.out.print("Первый список: ");
        splitLists[0].display();
        System.out.print("Второй список: ");
        splitLists[1].display();

        System.out.println("\nФинальное состояние:");
        System.out.println("Размер: " + list.size());
        System.out.println("Первый элемент: " + list.getFirst());
        System.out.println("Последний элемент: " + list.getLast());
        System.out.print("Все элементы: ");
        list.display();

        System.out.println("\nПроверка очистки:");
        list.clear();
        System.out.println("Пустой: " + (list.isEmpty() ? "да" : "нет"));
        System.out.print("Элементы: ");
        list.display();
    }
}
