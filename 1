class Node {
    int data;
    Node next;

    Node(int data) {
        this.data = data;
        this.next = null;
    }
}

class SinglyLinkedList {
    Node head;
    int size;

    SinglyLinkedList() {
        head = null;
        size = 0;
    }

    void addFirst(int data) {
        Node newNode = new Node(data);
        newNode.next = head;
        head = newNode;
        size++;
    }

    void addLast(int data) {
        Node newNode = new Node(data);

        if (head == null) {
            head = newNode;
        } else {
            Node current = head;
            while (current.next != null) {
                current = current.next;
            }
            current.next = newNode;
        }
        size++;
    }

    void removeFirst() {
        if (head != null) {
            head = head.next;
            size--;
        }
    }

    void removeLast() {
        if (head == null) return;

        if (head.next == null) {
            head = null;
        } else {
            Node current = head;
            while (current.next.next != null) {
                current = current.next;
            }
            current.next = null;
        }
        size--;
    }

    void remove(int data) {
        if (head == null) return;

        if (head.data == data) {
            head = head.next;
            size--;
            return;
        }

        Node current = head;
        while (current.next != null) {
            if (current.next.data == data) {
                current.next = current.next.next;
                size--;
                return;
            }
            current = current.next;
        }
    }

    boolean contains(int data) {
        Node current = head;
        while (current != null) {
            if (current.data == data) {
                return true;
            }
            current = current.next;
        }
        return false;
    }

    int size() {
        return size;
    }

    boolean isEmpty() {
        return head == null;
    }

    void display() {
        if (head == null) {
            System.out.println("Список пустой");
            return;
        }

        Node current = head;
        while (current != null) {
            System.out.print(current.data + " ");
            current = current.next;
        }
        System.out.println();
    }

    void clear() {
        head = null;
        size = 0;
    }
}

public class Main {
    public static void main(String[] args) {
        SinglyLinkedList list = new SinglyLinkedList();
        System.out.println("Тестируем список");
        
        System.out.println("\n1. Добавляем элементы в начало:");
        list.addFirst(30);
        list.addFirst(20);
        list.addFirst(10);
        list.display();
        System.out.println("Размер: " + list.size());
        
        System.out.println("\n2. Добавляем элементы в конец:");
        list.addLast(40);
        list.addLast(50);
        list.display();
        
        System.out.println("\n3. Проверяем наличие элементов:");
        System.out.println("Содержит 20: " + (list.contains(20) ? "да" : "нет"));
        System.out.println("Содержит 100: " + (list.contains(100) ? "да" : "нет"));
        
        System.out.println("\n4. Удаляем первый элемент:");
        list.removeFirst();
        list.display();
        
        System.out.println("\n5. Удаляем последний элемент:");
        list.removeLast();
        list.display();
        
        System.out.println("\n6. Удаляем элемент по значению:");
        list.remove(30);
        list.display();
        
        System.out.println("\n7. Проверяем пустой ли список:");
        System.out.println("Пустой: " + (list.isEmpty() ? "да" : "нет"));
        
        System.out.println("\n8. Очищаем список:");
        list.clear();
        list.display();
        System.out.println("Пустой: " + (list.isEmpty() ? "да" : "нет"));
        System.out.println("Размер: " + list.size());
    }
}
